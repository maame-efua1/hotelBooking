<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>BookWithEase</title>
    <link rel="stylesheet" href="~/css/style.css">
    <script src="https://kit.fontawesome.com/8dae890511.js" crossorigin="anonymous"></script>
</head>
<body>
    
    @if (TempData["successMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["successMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="color: red;border: none;background-color: unset;">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <section class="welcome-section" id="home">
        <div class="container1">
            <h1>Welcome to Our Hotel</h1>
            <p>Welcome to Our Hotel! Experience unparalleled comfort, exquisite amenities, and impeccable service. Your journey begins here, where luxury meets hospitality.</p><br>
            <a class="book-now-button" asp-controller="Booking" asp-action="Index">Book Now</a>
        </div>
    </section>

    <br>
    <br>

    <section class="services-section" id="services">
        <div class="container">
            <h1>OUR SERVICES</h1>
            <div class="services-grid">
                <div class="service">
                    <img src="/img/services/event.jpg" alt="Service 1">
                    <h3>Event Hosting</h3>

                </div>
                <div class="service">
                    <img src="/img/services/accomodation.jpg" alt="Service 2">
                    <h3>Accommodation</h3>

                </div>
                <div class="service">
                    <img src="/img/services/swimming.jpg" alt="Service 3">
                    <h3>Swimming</h3>

                </div>
            </div>
            <a class="see-more-button">See More</a>
        </div>
    </section>

    <br>
    <br>

    <section class="gallery-section" id="gallery">
        <div class="container">
            <h1>GALLERY</h1>
            <div class="gallery-grid">
                <div class="gallery-item">
                    <img src="/img/gallery/photo1.jpg" alt="Photo 1">
                </div>
                <div class="gallery-item">
                    <img src="/img/gallery/photo2.jpg" alt="Photo 2">
                </div>
                <div class="gallery-item">
                    <img src="/img/gallery/photo3.jpg" alt="Photo 3">
                </div>
                <div class="gallery-item">
                    <img src="/img/gallery/photo4.jpg" alt="Photo 4">
                </div>
                <div class="gallery-item">
                    <img src="/img/gallery/photo5.jpg" alt="Photo 5">
                </div>
                <div class="gallery-item">
                    <img src="/img/gallery/photo6.jpg" alt="Photo 6">
                </div>
                <div class="gallery-item">
                    <img src="/img/gallery/photo7.jpg" alt="Photo 7">
                </div>
                <div class="gallery-item">
                    <img src="img/gallery/photo8.jpg" alt="Photo 8">
                </div>
                <div class="gallery-item">
                    <img src="/img/gallery/photo9.jpg" alt="Photo 9">
                </div>
            </div>
            <a href="#" class="see-more-button">See More</a>
        </div>
    </section>

    <br>
    <br>

    <section class="contact-section">
        <div class="container">
            <h1>CONTACT US</h1>
            <div class="contact-wrapper">
                <div class="contact-form">
                    <form action="#" method="post">
                        <div class="form-row">
                            <input type="text" id="name" name="name" placeholder="Your Name" required>
                            <input type="email" id="email" name="email" placeholder="Your Email" required>
                        </div>
                        <div class="form-row">
                            <input type="tel" id="number" name="number" placeholder="Your Number" required>
                            <input type="text" id="subject" name="subject" placeholder="Subject" required>
                        </div>
                        <div class="form-row">
                            <input type="text" id="message" name="message" placeholder="Your Message" required></textarea>
                        </div>
                        <input type="submit" value="Submit">
                    </form>
                </div>

                <div class="contact-info">
                    <div class="info-item">
                        <h3>Location</h3>
                        <p>123 Hotel Street, City, Country</p>
                    </div>
                    <div class="info-item">
                        <h3>Contact</h3>
                        <p>Email: info@example.com<br>Phone: +1234567890</p>
                    </div>
                    <div class="info-item">
                        <h3>Social Media</h3>
                        <ul class="social-links">
                            <li><a href="#">Facebook</a></li>
                            <li><a href="#">Twitter</a></li>
                            <li><a href="#">Instagram</a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </section>

    <br>
    <br>

    


</body>
</html>
