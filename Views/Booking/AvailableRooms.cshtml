<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>BookWithEase</title>
    <link rel="stylesheet" href="~/css/arooms.css">
    <script src="https://kit.fontawesome.com/8dae890511.js" crossorigin="anonymous"></script>
</head>
<body>
    <section class="welcome-sectionb" id="home">
        <div class="container3">
            <table class="room-table">
                <thead>
                    <tr>
                        <th>Room Number</th>
                        <th>Type</th>
                        <th>Price per Night</th>
                        <th>Floor</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                     @foreach (var item in Model)
        {
            <tr>
                <td>@item.room_no</td>
                <td>@item.roomtype</td>
                <td>@item.pricePernight</td>
                <td>@item.roomfloor</td>
                <td><button asp-action="Confirm Booking" asp-controller="Booking">Book</button></td>
            </tr>
        }
                </tbody>
            </table>
    </section>
</body>
</html>

